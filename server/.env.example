# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ar_furniture
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Supabase Auth Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret

# Server Configuration
PORT=5000
NODE_ENV=development

# Comma-separated list of allowed frontend origins
# Example: CORS_ORIGIN=http://localhost:5173,https://oneiric.shop
CORS_ORIGIN=http://localhost:5173

# Legacy compatibility switch for old custom JWT tokens.
# Keep "false" for Supabase-only auth runtime.
ALLOW_LEGACY_CUSTOM_JWT=false
